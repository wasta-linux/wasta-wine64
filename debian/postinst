#!/bin/sh
# postinst script for wasta-wine64
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        DIR=/opt
        echo
        echo "*** merging wasta-wine64.tar.bz2 pieces"
        echo
        cat $DIR/wasta-wine64-* > $DIR/wasta-wine64.tar.bz2

        cd $DIR
        md5sum -c wasta-wine64.tar.bz2.md5
        OUTNUM=$?
        if [ "$OUTNUM" -eq 0 ];
        then
            echo
            echo "*** wasta-wine64.tar.bz2 md5 matches"
            echo
            rm $DIR/wasta-wine64-*

            echo
            echo "*** installing to /opt/wasta-wine64"
            echo
            tar -jxf $DIR/wasta-wine64.tar.bz2 -C $DIR
            sleep 1
            rm $DIR/wasta-wine64.tar.bz2*
        else
            echo
            echo "*** ERROR: wasta-wine64.tar.bz2 md5 did not match"
            echo
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
