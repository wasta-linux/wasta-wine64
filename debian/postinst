#!/bin/sh
# postinst script for wasta-wine64
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        DIR=/opt/wasta-wine64
        echo
        echo "*** Renaming .so-wasta files back to .so"
        echo
        find $DIR -iname *.so-wasta -exec rename 's@.so-wasta$@.so@' {} \;
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
